# FIREBASE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"..."}

# Bot protection (recommended for production):
# BOT_PROTECTION_STRICT=true
# TURNSTILE_SECRET_KEY=your_cloudflare_turnstile_secret
