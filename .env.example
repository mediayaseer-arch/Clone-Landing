# VITE_TURNSTILE_SITE_KEY=your_cloudflare_turnstile_site_key

# Firebase App Check (recommended for direct Firestore client access):
# VITE_FIREBASE_APPCHECK_SITE_KEY=your_recaptcha_v3_site_key
